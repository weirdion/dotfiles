#!/usr/bin/env python3

import os
import subprocess
import sys


def convert_to_mp4(input_file):
    # Create the new and final filenames
    base_name = os.path.splitext(input_file)[0]
    new_name = f"{base_name}-tmp.mp4"
    final_name = f"{base_name}.mp4"

    _base_command = ["ffmpeg", "-y", "-i", input_file]

    if sys.platform == "darwin":
        # fmt: off
        _encoder_opts = [
            "-c:v", "h264_videotoolbox",  # hardware-accelerated H.264 encoding on macOS
            "-q:v", "60",  # quality 0-100, ~60 (higher = better quality)
        ]
    else:
        # fmt: off
        _encoder_opts = [
            "-c:v", "libx264",
            "-crf", "23", # balance Constant Rate Factor (CRF) quality and file size
            "-preset", "slow", # preset slow for better compression
        ]

    # fmt: off
    common_command_end = [
        "-c:a", "aac",
        "-b:a", "128k",  # target audio bitrate
        "-ar", "48k",  # audio sample rate
        "-ac", "2",  # number of audio channels
        "-movflags", "+faststart",  # for better streaming support
        "-map", "0:v",  # map video stream
        "-map", "0:a?",  # map audio stream if present
        "-map_metadata", "-1",  # remove metadata
        "-map_chapters", "-1",  # remove chapters
        "-loglevel", "error",
        "-stats",
        "-hide_banner",
        new_name,
    ]

    ffmpeg_cmd = _base_command + _encoder_opts + common_command_end

    try:
        # Run the ffmpeg command
        subprocess.run(ffmpeg_cmd, check=True)

        # Remove original file and rename the new file
        os.remove(input_file)
        os.rename(new_name, final_name)
        print(f"Removed '{input_file}'")
        print(f"Renamed '{new_name}' -> '{final_name}'")

    except subprocess.CalledProcessError as e:
        print(f"Error converting {input_file}: {str(e)}", file=sys.stderr)
        sys.exit(1)
    except OSError as e:
        print(f"OS error occurred: {str(e)}", file=sys.stderr)
        sys.exit(1)


def main():
    if len(sys.argv) < 2:
        print("\033[0;31mUnable to execute the command.\033[0m")
        print("\033[0;37mUsage: convertToMp4 source\033[0m")
        sys.exit(1)

    for input_file in sys.argv[1:]:
        print(f"*** Processing {input_file} ***")
        convert_to_mp4(input_file)


if __name__ == "__main__":
    main()
